pkgname=colourpipe
pkgver=1.0.1
pkgrel=1
pkgdesc="Collection of programs used to colour the output of other programs"
arch=('any')
url="https://github.com/maandree/colourpipe"
license=('GPL3')
depends=('java-runtime')
makedepends=('java-environment')
provides=('colourpipe')
conflicts=('colourpipe')
source=(https://github.com/maandree/colourpipe/tarball/1.0.1)
md5sums=(e558103de0b2cea5b53c1f5542b1992c)

build() {
  cd maandree-colourpipe-*
  make DESTDIR="$pkgdir/"
}

package() {
  cd maandree-colourpipe-*
  make DESTDIR="$pkgdir/" install
}
